<div class="page-container">
  
  <div class="col-12 col-center text-center">
    <h2>Sign up</h2>
  </div>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    
    <div class="col-8 col-center row-space-top-4">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: false, class: "col-12 col-center" %>
      </div>
    </div>
    
    <div class="col-8 col-center">
      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, class: "col-12 col-center" %>
      </div>
    </div>
  
    <div class="col-8 col-center">
      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "col-12 col-center" %>
      </div>
    </div>
    
    <div class="col-8 col-center">
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-12 col-center" %>
      </div>
    </div>
    
    <div class="col-8 col-center row-space-top-4">
      <div class="actions col-center col-6">
        <%= f.submit "Sign up", class: "btn-primary btn-sm col-12 col-center" %>
      </div>
    </div>
  <% end %>
  <div class="col-8 col-center">
    <%= render "devise/shared/links" %>
  </div>
</div>